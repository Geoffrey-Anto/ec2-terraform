#! /bin/bash

echo mypassword | sudo apt update

# Install Java SDK 11
echo mypassword | sudo apt install -y openjdk-11-jdk

# Download and Install Jenkins
wget -q -O - https://pkg.jenkins.io/debian-stable/jenkins.io.key | sudo apt-key add -
echo mypassword | sudo sh -c 'echo deb http://pkg.jenkins.io/debian-stable binary/ > /etc/apt/sources.list.d/jenkins.list'
echo mypassword | sudo apt update
echo mypassword | sudo apt -y install jenkins

# Start Jenkins
echo mypassword | sudo systemctl start jenkins

# Enable Jenkins to run on Boot
echo mypassword | sudo systemctl enable jenkins